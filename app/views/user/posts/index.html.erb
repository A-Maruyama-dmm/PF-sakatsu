<% @post.each do |posts| %>
<div>
  <%= link_to post_path(posts.id) do %>
    <%= attachment_image_tag posts, :image %>
  <% end %>
  <p>投稿ユーザー画像：<%= image_tag('sample-author1.jpg') %></p>
  <p></p>
  <p></p>
  <p>ユーザーネーム：<%= posts.name %></p>
  <p><%= link_to "#{posts.comments.count} コメント", posts_path(posts.id) %></p>
</div>
<% end %>