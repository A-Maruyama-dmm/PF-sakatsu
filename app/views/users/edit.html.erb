<div class='container'>
  <div class='row'>
    <div class='col-md-12 offset-md-1'>
  		<h2>User Page</h2>
  	</div>
  		    <%= form_with model: @user, local: true do |f| %>


          <div class="field">
            <%= f.label "氏名" %><br />
            <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
          </div>

          <div class="field">
            <%= f.label "メールアドレス" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <div class="field">
            <%= f.label "年齢"%><br />
            <%= f.text_field :age, autofocus: true, autocomplete: "age" %>
          </div>

          <div class="form-group">
            <%= f.label :sauna_year,"サウナ歴" %><br />
            <%= f.select :sauna_year,[["1年目", "1年目"], ["2年目", "2年目"], ["3年目", "3年目"],["4年目", "4年目"],["5年目", "5年目"],["6年目", "6年目"],["7年目", "7年目"],["8年目", "8年目"],["9年目", "9年目"],["10年以上", "10年目"]], include_blank: "選択して下さい",class:"form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :number_of_sets,"セット回数（交代浴）" %><br />
            <%= f.select :number_of_sets,[["1回", "1回"], ["2回", "2回"], ["3回", "3回"],["4回以上", "4回以上"]], include_blank: "選択して下さい",class:"form-control" %>
          </div>

          <div class="form-group">
            <%= "プロフィール画像" %><br />
            <%= f.attachment_field :image%>
          </div>

          <div class="actions">
            <%= f.submit "更新" %>
          </div>

          <% end %>

          <td><%#= link_to @book.title, book_path(@book) %></td>
          <td><%#= @book.body %></td>
          <% if current_user.id == @user.id %>
          <%= link_to '削除', user_path(@user), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_post_#{@user.id}"%>
          <% end %>



  </div>

