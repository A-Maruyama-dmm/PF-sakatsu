<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-12'>
  		<h2>User Page</h2>

  <table class='table'>
  <thead>
    <tr>
      <th>ユーザ画像</th>
      <th>氏名</th>
      <th class=text-right>年齢</th>
      <th class="text-right">サウナ歴</th>
      <th class="text-right">セット回数</th>
      <th></th>
    </tr>
  		<tbody>
  		  <tr>
            <th><%= attachment_image_tag(@user, :image, :fill, 100, 100, fallback: "no_image.jpg") %></th>
            <th><%= @user.name %></th>
            <th class="text-right"><%= @user.age %></th>
            <th class="text-right"><%= @user.sauna_years %></th>
            <th class="text-right"><%= @user.number_of_sets%></th>
            <th>
            <% if current_user.id == @user.id %>
            <%= link_to '編集', edit_user_path(@user), class: "btn btn-sm btn-success edit_user_#{@user.id}" %>
            <%= link_to '削除', user_path(@user), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_post_#{@user.id}"%>
            <% end %>
            <%= link_to '戻る', users_path, class: "btn btn-sm btn-info" %>
            </th>
        </tr>
      </body>
  </table>

      <table class='table table-hover table-inverse'>
      <thead>
        <tr>
          <th></th>
          <th>名前</th>
          <th>URL</th>
          <th>評価</th>
          <th>公認</th>
          <th>コメント</th>
          <th>いいね</th>
          <th>詳細</th>
        </tr>
      </thead>
      <tbody>
        <%= render 'posts/index', posts: @posts  %>
      </tbody>
    </table>
    
    <%= render 'layouts/fixed_btn' %>