<% posts.each do |post| %>
<div>
  <%= link_to post_path(post.id) do %>
  <tr>
      <td><%= attachment_image_tag post, :sauna_image, format: 'jpeg', size: "300x300" %></td>
      <td><%= post.sauna_name %></td>
      <% end %>
      <td><%= post.url %></td>
      <td class="post_evaluation" data-score="<%= post.evaluation %>"></td>
      <td>
        <% if current_user.admin %>
          <%= link_to posts_change_auth_path(id: post.id) do %>
            <% if post.authorization %>
              <i class="fas fa-star"></i>
            <% else %>
              <i class="far fa-star"></i>
            <% end %>
          <% end %>
        <% else %>
          <% if post.authorization %>
            <i class="fas fa-star"></i>
          <% else %>
            <i class="far fa-star"></i>
          <% end %>
        <% end %>
      </td>
      <td><%= link_to "#{post.comments.count} 件", post_path(post.id) %></td>
      <td id="like_buttons_<%= post.id %>" nowrap><%= render "likes/likes", post: post %></td>
　    <td><%= link_to 'Show', post_path(post), class: "post_#{post.id}" %></td>
  </tr>
</div>
<% end %>


  <script>
  $('.post_evaluation').raty({
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    },
    path: '/assets/'
  });
　</script>
