<% if @post.errors.any? %>
  <%= @post.errors.count %>件のエラーが発生しました
  <% @post.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-auto offset-sm-1">
      <h4>投稿編集</h4>
    </div>
    <%= render 'form', post: @post %>
  </div>